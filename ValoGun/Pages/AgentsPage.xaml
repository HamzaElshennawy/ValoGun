<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValoGun.Pages.AgentsPage"
             xmlns:viewmodels="clr-namespace:ValoGun.ViewModels"
             xmlns:model="clr-namespace:ValoGun.Models.Agents"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="#141E29"
             Shell.BackgroundColor="#141E29"
             Title="Agents">
    <ContentPage.BindingContext>
        <viewmodels:AgentsPageViewModel/>
    </ContentPage.BindingContext>
    <CollectionView 
        ItemsSource="{Binding _Agents}"
        ItemsLayout="VerticalGrid, 2"
        >
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Data">
                <Frame 
                    Margin="7,5"
                    Padding="0"
                    HeightRequest="450"
                    BackgroundColor="#141E29"
                    BorderColor="#2F455C"
                    
                    >
                    
                    <Grid RowDefinitions="0.8*,0.1*">
                        
                        <Image
                            Source="{Binding background}"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Aspect="AspectFill"
                            />
                        <Image 
                            Source="{Binding fullPortraitV2}"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Aspect="AspectFill"
                            BackgroundColor="Transparent"
                            >
                        </Image>
                        <Frame 
                            Grid.Row="1"
                            Margin="0,-0,0,0"
                            BackgroundColor="#0F1B28"
                            Padding="0"
                            BorderColor="#2F455C"
                            >
                            <Grid ColumnDefinitions=".3*,.7*" Grid.Row="1">
                                <Image 
                                    Source="{Binding role.displayIcon}"
                                    Margin="5"
                                    Grid.Column="0"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Aspect="AspectFit"
                                    BackgroundColor="Transparent"
                                    />
                                <Label 
                                    Grid.Column="1"
                                    Text="{Binding displayName}"
                                    HorizontalOptions="CenterAndExpand"
                                    FontSize="18"
                                    LineBreakMode="NoWrap"
                                    FontFamily="BowlbyRegular"
                                    TextColor="#FFFFFF"
                                    VerticalOptions="Center"
                                    />
                            </Grid>
                        </Frame>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodels:AgentsPageViewModel}}, Path=NavigateToAgentCommand}" NumberOfTapsRequired="1" CommandParameter="{Binding .}"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
</ContentPage>