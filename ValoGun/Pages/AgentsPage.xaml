<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValoGun.Pages.AgentsPage"
             xmlns:viewmodels="clr-namespace:ValoGun.ViewModels"
             xmlns:model="clr-namespace:ValoGun.Models.Agents"
             Title="AgentsPage">
    <ContentPage.BindingContext>
        <viewmodels:AgentsPageViewModel/>
    </ContentPage.BindingContext>
    <CollectionView 
        ItemsSource="{Binding _Agents}"
        ItemsLayout="VerticalGrid, 2"
        >
        
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Data">
                <Frame 
                    Margin="7,5"
                    HeightRequest="450"
                    BackgroundColor="#141E29"
                    BorderColor="red"
                    >
                    <Grid RowDefinitions="0.1*,0.9*">
                        <Label 
                            Grid.Row="0"
                            Text="{Binding displayName}"
                            HorizontalOptions="Center"
                            FontSize="28"
                            FontFamily="BowlbyRegular"
                            TextColor="#FFFFFF"
                            VerticalOptions="Center"
                            />
                        <Image
                            Source="{Binding background}"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Aspect="AspectFill"
                            />
                        <Image 
                            Source="{Binding fullPortraitV2}"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Aspect="AspectFill"
                            BackgroundColor="Transparent"
                            >
                        </Image>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>