<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ValoGun.Pages.AgentDetailsPage"
             xmlns:viewmodels="clr-namespace:ValoGun.ViewModels"
             xmlns:model="clr-namespace:ValoGun.Models.Agents"
             BackgroundColor="#18181A"
             Shell.BackgroundColor="#18181A"
             Shell.NavBarHasShadow="True"
             Title="{Binding BindableAgent.displayName}">
    
    <ContentPage.BindingContext>
        <viewmodels:AgentDetailsViewModel/>
    </ContentPage.BindingContext>
    <ScrollView >
        <StackLayout Padding="0">
            <StackLayout.Background>
                <LinearGradientBrush>
                    <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[3],StringFormat='#{0}'}" Offset="0.1"/>
                    <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.5"/>
                    <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.8"/>
                </LinearGradientBrush>
            </StackLayout.Background>
            <StackLayout>
                <Label
                    Text="{Binding BindableAgent.displayName}"
                    TextColor="White"
                    FontSize="40"
                    HorizontalOptions="CenterAndExpand"
                    BackgroundColor="Transparent"
                    />
            </StackLayout>
            <StackLayout Padding="0">
                <Frame
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    HasShadow="True"
                    Margin="0,-20,0,10"
                    HeightRequest="400"
                    VerticalOptions="StartAndExpand">
                    <Grid ColumnDefinitions=".3*,.3*,.3*">
                        <Image Source="{Binding BindableAgent.background}" Grid.Column="0" Aspect="AspectFill"/>
                        <Image Source="{Binding BindableAgent.background}" Grid.Column="1" Aspect="AspectFill"/>
                        <Image Source="{Binding BindableAgent.background}" Grid.Column="2" Aspect="AspectFill"/>
                        <Image Source="{Binding BindableAgent.portrait}" Grid.ColumnSpan="3"/>
                    </Grid>
                </Frame>
            </StackLayout>
            <StackLayout>
                <Label
                    Text="Abilities"
                    FontSize="30"
                    TextColor="White"
                    HorizontalOptions="CenterAndExpand"
                    />
            </StackLayout>
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                Margin="10">

                <Grid
                
                    Margin="0"
                    ColumnDefinitions=".2*,.7*"
                    RowDefinitions=".3*,.9*"
                    >
                    <Image 
                        Source="{Binding BindableAgent.role.displayIcon}"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        />
                    <Label
                        Margin="0,0,0,10"
                        Text="Info:"
                        FontSize="18"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center"
        
                        />
                    <Label
                        Text="{Binding BindableAgent.description}"
                        FontSize="16"
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalOptions="Center"
                        Margin="10"
                        />

                    <Grid.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[3],StringFormat='#{0}'}" Offset="0.1"/>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.7"/>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.9"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
            </Frame>
            <Frame
                Padding="-0"
                BackgroundColor="Transparent"
                Margin="10"
                >

                <Grid
                
                    Margin="0"
                    ColumnDefinitions=".2*,.7*"
                    RowDefinitions=".3*,.9*"
                    >
                    <Image 
                        Source="{Binding BindableAgent.abilities[2].displayIcon}"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        />
                    <Label
                        Margin="0,0,0,10"
                        Text="{Binding BindableAgent.abilities[2].displayName,StringFormat='C: {0}'}"
                        FontSize="18"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center"
        
                        />
                    <Label
                        Text="{Binding BindableAgent.abilities[2].description}"
                        FontSize="16"
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalOptions="Center"
                        Margin="10"
                        />
                    <Grid.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[0],StringFormat='#{0}'}" Offset="0.1"/>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.7"/>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.9"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
            </Frame>
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                Margin="10">
                
                <Grid
                    Margin="0"
                    ColumnDefinitions=".2*,.7*"
                    RowDefinitions=".3*,.9*"
                >
                <!--<Grid.Background>
                    <LinearGradientBrush>
                        <GradientStop Color=""
                    </LinearGradientBrush>
                </Grid.Background>-->
                <Image 
                    Source="{Binding BindableAgent.abilities[0].displayIcon}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    />

                <Label
                    Margin="0,0,0,10"
                    Text="{Binding BindableAgent.abilities[0].displayName,StringFormat='Q: {0}'}"
                    FontSize="18"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"
                    CharacterSpacing="1.1"
                   />
                <Label
                    Text="{Binding BindableAgent.abilities[0].description}"
                    FontSize="16"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalOptions="Center"
                    CharacterSpacing="1.1"
                    Margin="10"
                    />

                <Grid.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[0],StringFormat='#{0}'}" Offset="0.1"/>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.7"/>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.9"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
            </Frame>
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                Margin="10"
                >
                <Grid
                Margin="0"
                ColumnDefinitions=".2*,.7*"
                RowDefinitions=".3*,.9*"
                >
                <Image 
                    Source="{Binding BindableAgent.abilities[1].displayIcon}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    />
                <Label
                    Margin="0,0,0,10"
                    Text="{Binding BindableAgent.abilities[1].displayName,StringFormat='E: {0}'}"
                    FontSize="18"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"
        
                    />
                <Label
                    Text="{Binding BindableAgent.abilities[1].description}"
                    FontSize="16"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalOptions="Center"
                    Margin="10"
                    />
                <Grid.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[0],StringFormat='#{0}'}" Offset="0.1"/>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.7"/>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.9"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
            </Frame>
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                Margin="10"
                >
                <Grid
                    Margin="0"
                    ColumnDefinitions=".2*,.7*"
                    RowDefinitions=".3*,.9*"
                    >
                <Image 
                    Source="{Binding BindableAgent.abilities[3].displayIcon}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    />
                <Label
                    Margin="0,0,0,10"
                    Text="{Binding BindableAgent.abilities[3].displayName,StringFormat='X: {0}:'}"
                    FontSize="18"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"
        
                    />
                <Label
                    Text="{Binding BindableAgent.abilities[3].description}"
                    FontSize="16"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalOptions="Center"
                    
                    Margin="10"
                    />
                <Grid.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[0],StringFormat='#{0}'}" Offset="0.1"/>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.7"/>
                        <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.9"/>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
            </Frame>
            <Frame
                Padding="0"
                BackgroundColor="Transparent"
                Margin="10"
                >
                <Grid
                    Margin="0"
                    RowDefinitions=".3*,.9*"
                    >
                    
                    <Label
                        Margin="0,10,0,10"
                        Text="Biography"
                        FontSize="32"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center"
                        HorizontalOptions="Center"
                        />
                    <Label
                        Text="{Binding BindableAgent.abilities[3].description}"
                        FontSize="16"
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalOptions="Center"
                        TextColor="#FFF"
                        Margin="10"
                        />
                    <Grid.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[0],StringFormat='#{0}'}" Offset="0.1"/>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[2],StringFormat='#{0}'}" Offset="0.7"/>
                            <GradientStop Color="{Binding BindableAgent.backgroundGradientColors[1],StringFormat='#{0}'}" Offset="0.9"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>