<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValoGun.Pages.WeaponStatusPage"
             xmlns:viewmodels="clr-namespace:ValoGun.ViewModels"
             x:DataType="viewmodels:WeaponStatusViewModel"
             xmlns:model="clr-namespace:ValoGun.Models"
             Title="{Binding MainWeapon.displayName}">
    <ScrollView>
        <CollectionView ItemsSource="{Binding Skins}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Skin">

                    <Frame>
                        <Grid>
                            <Image Source="{Binding displayIcon}"/>
                        </Grid>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>